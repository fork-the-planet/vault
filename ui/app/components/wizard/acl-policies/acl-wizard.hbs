<Wizard @wizardId={{this.wizardId}} @isModal={{@isIntroModal}} @title="ACL Policies" @onDismiss={{this.onDismiss}}>
  <:intro>
    <Wizard::AclPolicies::Intro />
  </:intro>
  <:introActions>
    <Hds::ButtonSet>
      <Hds::Button
        @icon="plus"
        @text="Create a policy"
        @route="vault.cluster.policies.create"
        data-test-button="Create a policy"
      />
      <Hds::Button
        @color="secondary"
        @text={{if @isIntroModal "Close" "Skip"}}
        {{on "click" this.onDismiss}}
        data-test-button="Skip"
      />
      <Hds::Link::Standalone
        @icon="docs-link"
        @iconPosition="trailing"
        @text="View documentation"
        @href={{doc-link "/vault/docs/concepts/policies"}}
        class="has-left-margin-m"
      />
    </Hds::ButtonSet>
  </:introActions>
</Wizard>